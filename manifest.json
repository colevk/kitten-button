{
	"name": "Kitten Button",
	"version": "1.0",
	"manifest_version": 2,

	"description": "Replaces all images on a page with kittens.",

	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "Kittens!"
	},
	"permissions": ["tabs", "http://*/*"],
	"background": {
		"scripts": ["js/background.js"]
	},
    "content_scripts": [{
        "matches": ["http://*/*"],
        "css": ["css/hider.css"]
    }],
    "options_page": "options/options.html",
    "web_accessible_resources": [
        "images/placeholder.png",
        "images/color/cat1.jpg",
        "images/color/cat2.jpg",
        "images/color/cat3.jpg",
        "images/color/cat4.jpg",
        "images/color/cat5.jpg",
        "images/color/cat6.jpg",
        "images/color/cat7.jpg",
        "images/color/cat8.jpg",
        "images/color/cat9.jpg",
        "images/color/cat10.jpg",
        "images/color/cat11.jpg",
        "images/color/cat12.jpg",
        "images/color/cat13.jpg",
        "images/color/cat14.jpg",
        "images/color/cat15.jpg",
        "images/color/cat16.jpg",
        "images/grayscale/cat1.jpg",
        "images/grayscale/cat2.jpg",
        "images/grayscale/cat3.jpg",
        "images/grayscale/cat4.jpg",
        "images/grayscale/cat5.jpg",
        "images/grayscale/cat6.jpg",
        "images/grayscale/cat7.jpg",
        "images/grayscale/cat8.jpg",
        "images/grayscale/cat9.jpg",
        "images/grayscale/cat10.jpg",
        "images/grayscale/cat11.jpg",
        "images/grayscale/cat12.jpg",
        "images/grayscale/cat13.jpg",
        "images/grayscale/cat14.jpg",
        "images/grayscale/cat15.jpg",
        "images/grayscale/cat16.jpg"
    ]
}
